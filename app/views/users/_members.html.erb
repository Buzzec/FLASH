

<div class="container">
    <div class="row">
        <div class="col-sm">
            <% if @pendingCheck %>
                <h1><b>Pending Members</b></h1>
            <% else %>
                <h1><b>Current Members</b></h1>
            <% end %>
        </div>
        <div class="col-sm">
            <% if @pendingCheck %>
                <%= link_to 'See Current FLASH Members', users_path, class:"btn btn-success float-right" %>
            <% else %>
                <%= link_to 'Show Pending Members', users_pending_path, class:"btn btn-success float-right" %>
            <% end %>
        </div>
    </div>

    <div class="row">
        <div class="col-sm">
        <table class="table table-striped table-bordered table-hover">

            <thead style="background-color: #488cf6">
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>UIN</th>
                <th>Membership Level</th>
                <th>Committee</th>
                <th>Email</th>
                <th></th>
            </tr>
            </thead>

            <tbody>
            <% @users.each do |user| %>
                <% if (((user.committee != nil) || (user.check_executive?)) != @pendingCheck) %>
                <tr>
                    <td><%= user.first_name %></td>
                    <td><%= user.last_name %></td>
                    <td><%= user.uin %></td>
                    <td><%= user.user_type_pretty %></td>
                    <td>
                    <%=
                        if (@pendingCheck)
                            'TBD'
                        elsif (user.committee)
                            user.committee.name
                        else
                            user.user_type_pretty
                        end
                    %>
                    </td>
                    <td><%= user.email %></td>
                    <!--<td>lessthanpercentequals link_to 'Show', user, class:"btn btn-info" percentgreaterthan</td> COMMENT ME OUT-->
                    <td><%= link_to 'Edit', edit_user_path(user), class:"btn btn-info" %>
                        <%=
                            if ((current_user.check_admin? && current_user != user) || !user.check_executive?)
                                if (@pendingCheck)
                                    link_to 'Delete', user, class:"btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } 
                                else
                                    link_to 'Remove', soft_delete_user_path(user), class:"btn btn-danger", data: { confirm: 'Are you sure?' } 
                                end
                            end
                        %>
                    </td>
                </tr>
                <% end %>
            <% end %>
            </tbody>

        </table>
        </div>
    </div>
</div>